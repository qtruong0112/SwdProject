@model SwdProject.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="fas fa-key me-2"></i>Đổi mật khẩu
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <!-- Current Password -->
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.CurrentPassword)
                        </label>
                        <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Nhập mật khẩu hiện tại" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <!-- New Password -->
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-semibold">
                            <i class="fas fa-key me-1"></i>@Html.DisplayNameFor(m => m.NewPassword)
                        </label>
                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nhập mật khẩu mới" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                            <i class="fas fa-check me-1"></i>@Html.DisplayNameFor(m => m.ConfirmPassword)
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Security Notice -->
                    <div class="alert alert-info d-flex align-items-center mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <div>
                            <strong>Lưu ý bảo mật:</strong> Sau khi đổi mật khẩu thành công, bạn sẽ cần đăng nhập lại với mật khẩu mới.
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-key me-1"></i>Đổi mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 