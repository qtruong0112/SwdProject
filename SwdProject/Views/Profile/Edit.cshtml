@model SwdProject.Models.ProfileViewModel

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa hồ sơ cá nhân
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="RoleId" type="hidden" />
                    <input asp-for="RoleName" type="hidden" />
                    <input asp-for="Avatar" type="hidden" />

                    <div class="row">
                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-1"></i>@Html.DisplayNameFor(m => m.Email)
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Full Name -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="fas fa-user me-1"></i>@Html.DisplayNameFor(m => m.FullName)
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">
                                <i class="fas fa-phone me-1"></i>@Html.DisplayNameFor(m => m.Phone)
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Role (Read-only) -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-shield-alt me-1"></i>Vai trò
                            </label>
                            <input type="text" class="form-control" value="@Model.RoleName" readonly />
                            <div class="form-text">Vai trò không thể thay đổi</div>
                        </div>

                        <!-- Address -->
                        <div class="col-12 mb-4">
                            <label asp-for="Address" class="form-label fw-semibold">
                                <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayNameFor(m => m.Address)
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Nhập địa chỉ của bạn"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 