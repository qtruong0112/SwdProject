@model SwdProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div class="row">
                        <!-- Email -->
                        <div class="col-12 mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-1"></i>@Html.DisplayNameFor(m => m.Email)
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Full Name -->
                        <div class="col-12 mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="fas fa-user me-1"></i>@Html.DisplayNameFor(m => m.FullName)
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Phone -->
                        <div class="col-12 mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">
                                <i class="fas fa-phone me-1"></i>@Html.DisplayNameFor(m => m.Phone)
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại (tùy chọn)" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Address -->
                        <div class="col-12 mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">
                                <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayNameFor(m => m.Address)
                            </label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ (tùy chọn)" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="col-12 mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.Password)
                            </label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="col-12 mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký
                        </button>
                    </div>

                    <!-- Login Link -->
                    <div class="text-center">
                        <span class="text-muted">Đã có tài khoản?</span>
                        <a asp-action="Login" class="text-decoration-none fw-semibold">
                            Đăng nhập ngay
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 